<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="weather" type = "com.globa.catweather.models.Weather"/>
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/weatherRefreshLayout"
        tools:context=".fragments.CurrentWeatherFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:backgroundTint="?attr/colorPrimary">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_cloud_test"
                        android:contentDescription="@string/app_name"
                        android:id="@+id/cloud"/>

                <TextView
                    android:id="@+id/currentTempTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@{Double.toString(weather.temp), default = 0.0}"
                    android:textSize="20sp"
                    android:layout_toEndOf="@id/cloud"/>

                <TextView
                    android:id="@+id/weatherConditionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{weather.condition, default = 0.0}"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/feelsLikeTempDecryptionTextView"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/feels_like"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/feelsLikeTempTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/feelsLikeTempDecryptionTextView"
                    android:text="@{Double.toString(weather.feelsLike), default = 0.0}"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/windDirectionDescTextView"
                    android:layout_width="263dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/wind"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/windDirectionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@+id/windDirectionDescTextView"
                    android:text="@{weather.windDirection, default = 'N' }"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="3dp"/>

                <TextView
                    android:id="@+id/windSpeedTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/windDirectionTextView"
                    android:layout_marginTop="40dp"
                    android:text="@{Double.toString(weather.windSpeed), default = 0.0 }"
                    android:textAlignment="textEnd" />

        </RelativeLayout>

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:contentDescription="@string/app_name"
                    android:id="@+id/currentWeatherImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/cat_weather_test"
                    app:siRadius="30dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"/>
        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>
