<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="position"
            type="Integer" />
        <variable
            name="viewModel"
            type="com.globa.catweather.viewmodels.ForecastWeatherViewModel" />
        <variable
            name="forecast"
            type="com.globa.catweather.models.ForecastWeather"/>
    </data>

    <LinearLayout
        android:background="@drawable/background_round"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="?attr/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/forecastWeatherDataTextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_cloud_test"
                android:contentDescription="@string/app_name" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:id="@+id/forecastConditionTextView"
                android:text='@{forecast.condition, default = "Condition"}'/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:stretchColumns="2"
            android:textSize="15sp"
            android:layout_marginStart="20dp">
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/forecastMinTemperatureTextView"
                    android:text='@{Double.toString(forecast.minT), default = "Min T"}'/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:id="@+id/forecastMaxTemperatureTextView"
                    android:text='@{Double.toString(forecast.maxT), default = "Max T"}'/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:id="@+id/forecastMaxWindSpeedTextView"
                    android:text='@{Double.toString(forecast.maxWindSpeed), default = "Wind Speed"}'/>

            </TableRow>


        </TableLayout>
    </LinearLayout>

</layout>